<% layout('/layout/boilerplate') %>
<link rel="stylesheet" href="/css/style.css">

<body>
    
    <div class="newForm-container">
        <div class="row">
            <div class="col-6 welcomeMessage">
                <h1>Welcome to Holidays!</h1>
                <h2>List your perfect getaway and connect with travelers</h2>
                <h3>Letâ€™s make vacations unforgettable!</h3>
            </div>
                <div class="col-6 newForm">
                    <h1>Showcase Your Perfect Getaway!</h1>
                    <form action="/listings" method="POST" class="listing-form needs-validation" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title:</label>
                            <input type="text" id="title" name="listing[title]" placeholder="Enter Title" class="form-input" required />
                            <div class="invalid-feedback">Please enter a title.</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                
                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-input" required></textarea>
                            <div class="invalid-feedback">Please enter a description.</div>
                            <div class="valid-feedback">Looks Awesome!</div>
                        </div>
                
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" id="price" name="listing[price]" placeholder="Enter Price" class="form-input" required />
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid price.</div>
                        </div>
                
                        <div class="mb-3">
                            <label for="image" class="form-label">Upload image file</label>
                            <input type="file" id="image" name="listing[image]" class="form-input">            
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                
                        <div class="mb-3">
                            <label for="location" class="form-label">Location:</label>
                            <input type="text" id="location" name="listing[location]" placeholder="Enter Location" class="form-input" required />
                            <div class="invalid-feedback">Please enter a location.</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                
                        <div class="mb-3">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" id="country" name="listing[country]" placeholder="Enter Country" class="form-input" required />
                            <div class="invalid-feedback">Please enter a country.</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                
                        <fieldset class="amenities-section">
                            <legend>Select Amenities:</legend>
                            <div class="amenities-grid">
                                <label><input type="checkbox" name="listing[amenities]" value="WiFi"> WiFi</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Parking"> Parking</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Swimming Pool"> Swimming Pool</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Gym"> Gym</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Air Conditioning"> Air Conditioning</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Heating"> Heating</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Kitchen"> Kitchen</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Washer"> Washer</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Dryer"> Dryer</label>
                                <label><input type="checkbox" name="listing[amenities]" value="TV"> TV</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Refrigerator"> Refrigerator</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Microwave"> Microwave</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Fireplace"> Fireplace</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Balcony"> Balcony</label>
                                <label><input type="checkbox" name="listing[amenities]" value="Pet Friendly"> Pet Friendly</label>
                            </div>
                        </fieldset>
                        
                        
                
                        
                        
                
                        <button type="submit" class="form-button">Make Your Space Travel-Ready</button>
                    </form>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Bootstrap validation
            (function () {
                'use strict';
                const forms = document.querySelectorAll('.needs-validation');
                Array.from(forms).forEach(form => {
                    form.addEventListener('submit', event => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();
        </script>
            </div>
        </div>
    </div>

</body>


