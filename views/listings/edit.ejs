<% layout('/layout/boilerplate') %>
<link rel="stylesheet" href="/css/style.css">

<body>
    
    <div class="newForm-container">
        <div class="row">
            <div class="col-6 welcomeMessage">
                <h1>Welcome to Holidays!</h1>
                <h2>Update your getaway details</h2>
                <h3>Make vacations unforgettable!</h3>
            </div>
            <div class="col-6 newForm">
                <h1>Edit Your Listing</h1>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="listing-form needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" placeholder="Enter Title" class="form-input" required />
                        <div class="invalid-feedback">Please enter a title.</div>
                    </div>
            
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-input" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please enter a description.</div>
                    </div>
            
                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" placeholder="Enter Price" class="form-input" required />
                        <div class="invalid-feedback">Please enter a valid price.</div>
                    </div>
            
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload new image</label>
                        <input type="file" id="image" name="listing[image]" class="form-input">            
                    </div>
            
                    <div class="mb-3">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" placeholder="Enter Location" class="form-input" required />
                        <div class="invalid-feedback">Please enter a location.</div>
                    </div>
            
                    <div class="mb-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" placeholder="Enter Country" class="form-input" required />
                        <div class="invalid-feedback">Please enter a country.</div>
                    </div>
            
                    <fieldset class="amenities-section">
                        <legend>Select Amenities:</legend>
                        <div class="amenities-grid">
                            <% ["WiFi", "Parking", "Swimming Pool", "Gym", "Air Conditioning", "Heating", "Kitchen", "Washer", "Dryer", "TV", "Refrigerator", "Microwave", "Fireplace", "Balcony", "Pet Friendly"].forEach(amenity => { %>
                                <label>
                                    <input type="checkbox" name="listing[amenities]" value="<%= amenity %>" 
                                        <% if (listing.amenities.includes(amenity)) { %> checked <% } %> > <%= amenity %>
                                </label>
                            <% }) %>
                        </div>
                    </fieldset>
            
                    <button type="submit" class="form-button">Update Listing</button>
                </form>
            </div>
        </div>
    </div>
</body>
